<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_height"
    >

  <TextView
      android:id="@+id/description_label"
      android:text="@string/permission_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/grant_permission_text"
      android:layout_margin="@dimen/default_margin"
      style="@style/TextLabel"
      android:gravity="center"
      app:layout_constraintVertical_chainStyle="packed"
      />

  <TextView
      android:id="@+id/grant_permission_text"
      android:text="@string/grant_permission"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/description_label"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_margin="@dimen/default_margin"
      android:gravity="center"
      android:textColor="@color/cyan_main"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:clickable="true"
      android:focusable="true"
      style="@style/TextLabel"
      />
</androidx.constraintlayout.widget.ConstraintLayout>